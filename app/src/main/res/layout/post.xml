<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/post_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_profile_image"
            android:layout_width="@dimen/post_profile_image"
            android:layout_height="@dimen/post_profile_image"
            android:layout_marginRight="@dimen/post_profile_image_margin"
            android:layout_marginBottom="@dimen/post_profile_image_margin"
            android:src="@drawable/ic_person_black_24dp"
            android:background="@android:color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Title"/>

            <TextView
                android:id="@+id/post_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_user_name"
                style="@style/Base.TextAppearance.AppCompat.Caption"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_header_layout"
        style="@style/Base.TextAppearance.AppCompat.Body1"/>

</RelativeLayout>