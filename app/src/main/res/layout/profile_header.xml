<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_header_frame">
        <!-- Header -->
        <ImageView
            android:id="@+id/profile_header_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_header_height"
            android:src="@drawable/side_nav_bar"
            android:scaleType="centerCrop"
            android:onClick="viewHeaderImage"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_profile_image"
            android:layout_marginTop="@dimen/profile_profile_image_top_margin">

            <ImageView
                android:id="@+id/profile_profile_image"
                android:layout_width="@dimen/profile_profile_image"
                android:layout_height="@dimen/profile_profile_image"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_black_24dp"/>

            <ImageView
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/edit_profile_button_margin"
                android:visibility="gone"/>
        </RelativeLayout>
    </FrameLayout>

    <!-- Name -->
    <TextView
        android:id="@+id/profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_header_frame"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/profile_user_name_padding"
        style="@style/Base.TextAppearance.AppCompat.Title"/>

    <!-- About me -->
    <TextView
        android:id="@+id/profile_about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_user_name"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/about_me_padding"
        android:textColor="@android:color/black"
        style="@style/Base.TextAppearance.AppCompat.Subhead"/>

</RelativeLayout>