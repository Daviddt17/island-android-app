<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/toolbar_icon_dimen"
    android:layout_height="@dimen/toolbar_icon_dimen"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true">

    <ImageView
        android:id="@+id/notification_badge_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_notifications_white_24dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/view_to_center"
        android:layout_width="24dp"
        android:layout_height="@dimen/toolbar_icon_dimen"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/notification_badge_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/badge_count_padding"
        android:paddingRight="@dimen/badge_count_padding"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/badge_count_margin"
        android:layout_toRightOf="@+id/view_to_center"
        android:background="@drawable/badge_background"
        android:textColor="@android:color/white"
        android:textSize="9sp"/>

</RelativeLayout>