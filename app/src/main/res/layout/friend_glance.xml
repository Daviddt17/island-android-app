<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/friend_glance_padding">

    <ImageView
        android:id="@+id/friend_profile_image"
        android:layout_width="@dimen/friend_profile_image"
        android:layout_height="@dimen/friend_profile_image"
        android:src="@drawable/ic_person_black_24dp"
        android:background="?android:colorBackground"
        android:layout_marginRight="@dimen/friend_profile_image_name_margin"/>

    <TextView
        android:id="@+id/friend_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_gravity="center_vertical"
        android:text="Test Name"/>

</LinearLayout>