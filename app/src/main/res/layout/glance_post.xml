<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/post_padding">
    <include layout="@layout/post"
             android:id="@+id/include"/>

    <LinearLayout
        android:id="@+id/comment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/include"
        android:layout_marginTop="@dimen/comment_icon_count_top_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/comment_icon_count_margin"
            android:src="@drawable/ic_comment_black_24dp"
            android:alpha="0.54"/>

        <TextView
            android:id="@+id/post_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 comments"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>